<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PillativeCareApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="background">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/appbar_color</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextStyle.LabelSmall">
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="TextStyle.LabelMedium">
        <item name="android:textSize">@dimen/text_semi_small</item>
    </style>

    <style name="TextStyle.LabelLarge">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="TextStyle.BodySmall">
        <item name="android:textSize">@dimen/text_semi_small</item>
    </style>

    <style name="TextStyle.BodyMedium">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextStyle.BodyLarge">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>


    <style name="TextStyle.TitleSmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontFamily">@font/lato_medium</item>
    </style>

    <style name="TextStyle.TitleMedium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="fontFamily">@font/lato_medium</item>
    </style>

    <style name="TextStyle.TitleLarge">
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="TextStyle.TitleExtraLarge">
        <item name="android:textSize">@dimen/text_giant</item>
    </style>

    <style name="TextStyle.BodyMedium.EditTextStyle">
        <item name="android:textColor">@color/on_background_60</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/text_field_shape</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TopCornerCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">"@dimen/spacing_extra_large"</item>
        <item name="cornerSizeTopLeft">"@dimen/spacing_extra_large"</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="TextStyle.BodyMedium.TextInputEditTextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/on_background_60</item>
        <item name="android:textColorHint">@color/on_background_60</item>
        <item name="android:background">@drawable/selector_field</item>
        <item name="android:drawableTint">@color/on_background_60</item>
        <item name="boxBackgroundColor">@drawable/selector_field</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="BottomNavigationBarIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_navigation_bar_indicator_color</item>
    </style>

</resources>